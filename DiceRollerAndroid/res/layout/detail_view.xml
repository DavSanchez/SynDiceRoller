<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_margin="4dp"
                  android:background="@drawable/custombutton"
                  android:orientation="vertical">


    <TextView android:id="@+id/lbl_data"
              style="@style/ButtonText"
              android:textSize="@dimen/txt_field"
              android:text="Data label"
              android:padding="@dimen/pad_field"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"/>



    </LinearLayout>


    <Button
            android:id="@+id/btn_data"
            style="@style/RedStyle"
            android:textStyle="bold"
            android:textSize="@dimen/btn_field"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/detail_button" />

</LinearLayout>

