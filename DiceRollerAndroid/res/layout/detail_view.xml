<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:weightSum="1">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_margin="4dp"
                  android:orientation="vertical">

        <TextView android:id="@+id/lbl_data"
                  style="@style/ButtonText"
                  android:textSize="@dimen/txt_field"
                  android:text="Data label"
                  android:background="@drawable/custombutton"
                  android:padding="@dimen/pad_field"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"/>
        <!--
        <View android:layout_width="match_parent"
              android:layout_height="18dp"/>
        -->
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_margin="4dp"
                  android:orientation="vertical"
                  android:layout_weight="0.25"
                  android:weightSum="1">

        <TextView android:id="@+id/descr_data"
                  android:textColor="@android:color/white"
                  android:layout_margin="3dp"
                  android:textSize="@dimen/txt_field"
                  android:text="Data label"
                  android:background="@drawable/custombutton"
                  android:padding="@dimen/pad_field"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"/>
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_margin="0dp"
                  android:orientation="vertical"
                  android:layout_weight="0.75">
        <TextView
                android:id="@+id/detailNumberRolled"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="200sp"/>
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_margin="0dp"
                  android:orientation="horizontal"
                  android:layout_weight="1">
        <Button
                android:id="@+id/btn_remove"
                style="@style/RedStyle"
                android:textStyle="bold"
                android:textSize="@dimen/btn_field"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/detail_button" />

        <Button
                android:id="@+id/btn_roll"
                style="@style/GreenStyle"
                android:textStyle="bold"
                android:textSize="@dimen/btn_field"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/detail_roll_button" />
    </LinearLayout>
</LinearLayout>

